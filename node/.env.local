# ==============================================
# LOCAL WORKER CONFIGURATION (Your PC)
# ==============================================
# Run SSH tunnel first:
# ssh -L 5433:localhost:5432 user@prices.example.com -N &

MODE=worker

# Price Server DB (via SSH tunnel)
PG_HOST=127.0.0.1
PG_PORT=5433
PG_DATABASE=cyber_prices
PG_USER=price_checker
PG_PASSWORD=your_password

# Main Backend DB (via same SSH tunnel, different DB)
MAIN_DB_HOST=127.0.0.1
MAIN_DB_PORT=5433
MAIN_DB_NAME=cyber
MAIN_DB_USER=price_checker
MAIN_DB_PASSWORD=your_password

# Workers
WORKER_COUNT=5
HEADLESS=false
SOURCES=local
