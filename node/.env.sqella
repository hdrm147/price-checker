# ==============================================
# PRICE CHECKER - SQELLA CONFIGURATION
# ==============================================
# Copy this file to .env when running for Sqella project

MODE=full

# ==============================================
# DATABASE TYPE - SQLite for local development
# ==============================================
DB_TYPE=sqlite
SQLITE_DATABASE=./data/sqella_prices.db

# ==============================================
# MAIN BACKEND DATABASE (Sqella Laravel)
# ==============================================
MAIN_DB_HOST=localhost
MAIN_DB_PORT=5432
MAIN_DB_NAME=sqella
MAIN_DB_USER=
MAIN_DB_PASSWORD=

# ==============================================
# SSH TUNNELS (for remote Sqella server)
# ==============================================
# Uncomment to enable SSH tunneling
#SSH_ENABLED=true
#SSH_MAIN_CONFIG_NAME=sqella-server

# ==============================================
# API SERVER
# ==============================================
API_PORT=3003
API_SECRET=sqella-secret-key

# ==============================================
# WORKERS
# ==============================================
WORKER_COUNT=3
BROWSER_HEADLESS=true
SOURCES=local